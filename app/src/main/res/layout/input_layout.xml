<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context="">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Input Data"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Category"/>
            <RadioGroup
                android:id="@+id/radioCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/radioButtonPER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PER"/>
                <RadioButton
                    android:id="@+id/radioButtonEPS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EPS"/>
                <RadioButton
                    android:id="@+id/radioButtonROA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ROA"/>
                <RadioButton
                    android:id="@+id/radioButtonROE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ROE"/>
                <RadioButton
                    android:id="@+id/radioButtonDER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DER"/>
                <RadioButton
                    android:id="@+id/radioButtonPBV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PBV"/>
                <RadioButton
                    android:id="@+id/radioButtonDY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DY"/>
            </RadioGroup>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Type"/>
            <RadioGroup
                android:id="@+id/radioType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/radioButtonSmaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smaller Than"/>
                <RadioButton
                    android:id="@+id/radioButtonBigger"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bigger Than"/>
                <RadioButton
                    android:id="@+id/radioButtonEquals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Equals To"/>
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Value">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/textValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonSubmit"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:text="Submit"
                android:layout_marginTop="20dp"
                app:cornerRadius="20dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>