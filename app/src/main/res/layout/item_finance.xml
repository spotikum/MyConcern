<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Symbol"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_date"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            app:layout_constraintStart_toEndOf="@id/tv_symbol"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_per_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PER : "
            app:layout_constraintTop_toBottomOf="@id/tv_symbol"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            app:layout_constraintStart_toEndOf="@id/tv_per_name"
            app:layout_constraintTop_toBottomOf="@id/tv_symbol"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_eps_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EPS : "
            app:layout_constraintTop_toBottomOf="@id/tv_per_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_eps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            app:layout_constraintStart_toEndOf="@id/tv_eps_name"
            app:layout_constraintTop_toBottomOf="@id/tv_per_name"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_roa_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROA : "
            app:layout_constraintTop_toBottomOf="@id/tv_eps_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_roa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            app:layout_constraintStart_toEndOf="@id/tv_roa_name"
            app:layout_constraintTop_toBottomOf="@id/tv_eps"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_roe_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROE : "
            app:layout_constraintTop_toBottomOf="@id/tv_roa_name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_roe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            app:layout_constraintStart_toEndOf="@id/tv_roe_name"
            app:layout_constraintTop_toBottomOf="@id/tv_roa_name"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_der_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DER : "
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintEnd_toStartOf="@id/tv_der"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_der"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            app:layout_constraintTop_toBottomOf="@id/tv_date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_pbv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PBV : "
            app:layout_constraintTop_toBottomOf="@id/tv_der_name"
            app:layout_constraintEnd_toStartOf="@id/tv_pbv"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_pbv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            app:layout_constraintTop_toBottomOf="@id/tv_der_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_dy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DER : "
            app:layout_constraintTop_toBottomOf="@id/tv_pbv_name"
            app:layout_constraintEnd_toStartOf="@id/tv_der"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_dy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            app:layout_constraintTop_toBottomOf="@id/tv_pbv_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>